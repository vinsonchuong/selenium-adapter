{
  "name": "selenium-adapter",
  "version": "0.0.1",
  "description": "A promise adapter for Selenium WebDriver for use with ES2017 async/await",
  "keywords": [
    "selenium",
    "chrome",
    "firefox"
  ],
  "homepage": "https://github.com/vinsonchuong/selenium-adapter",
  "bugs": "https://github.com/vinsonchuong/selenium-adapter/issues",
  "license": "MIT",
  "author": "Vinson Chuong <vinsonchuong@gmail.com>",
  "main": "index.js",
  "bin": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/vinsonchuong/selenium-adapter"
  },
  "scripts": {
    "test": "eslint src test && ava",
    "build": "bin/build"
  },
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "chromedriver": "^2.24.1",
    "geckodriver": "^1.2.0",
    "phantomjs-prebuilt": "^2.1.13",
    "selenium-webdriver": "^3.0.0-beta-3"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-latest": "^6.16.0",
    "css-to-xpath": "^0.1.0",
    "directory-helpers": "^0.1.8",
    "eslint": "^3.9.1",
    "node-static": "^0.7.9",
    "tempfile": "^1.1.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    }
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "latest"
    ],
    "plugins": [
      "transform-runtime",
      [
        "module-resolver",
        {
          "root": [
            "./src",
            "./test"
          ],
          "alias": {
            "selenium-adapter": "./src"
          }
        }
      ]
    ]
  }
}
